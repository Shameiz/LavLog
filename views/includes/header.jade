nav.navbar.navbar-default.navbar-static-top
  .container
    .navbar-header
      button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar')
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href='/') ðŸ’©
    #navbar.navbar-collapse.collapse
      ul.nav.navbar-nav

      ul.nav.navbar-nav.navbar-right
        li(class=(title == 'Home') ? 'active' : null)
          a(href='/') Home
        li(class=(title == 'Groups') ? 'active' : null)
          a(href='/groups') Groups
        li(class=(title == 'Profile') ? 'active' : null)
          a(href='/profile') Profile
        li(class=(title == 'Logout') ? 'active' : null)
          a(href='/logout') Logout
        if user
          li.dropdown
            a.navbar-avatar.dropdown-toggle(href='#', data-toggle='dropdown')
              if picture
                img(src=picture)
              else
                img(src=user.gravatar)
              | <span> #{user.name || user.email || user.id} </span>
              i.caret
            ul.dropdown-menu
              li
                a(href='/account') My Account
              li.divider
              li
                a(href='/logout') Logout
