extends ../layout

block content
  .login-container.container
    .panel
      .panel-body
        if messages.error
          .alert.alert-danger(role='alert')
            for error in messages.error
              div= error.msg

        form(method='POST')
          .form-group
            label.font2(for='email') Email
            input.form-control(type='email', name='email', id='email', placeholder='Email', autofocus=true)
          .form-group
            label.font2(for='password') Password
            input.form-control(type='password', name='password', id='password', placeholder='Password')
          .form-group
            a(href='/forgot')
              strong Forgot your password?
          button.btn.btn-success.btn-block(type='submit') LOGIN

        .btn-toolbar.text-center
          a.btn.btn-facebook(href='/auth/facebook') Sign in with Facebook
          a.btn.btn-twitter(href='/auth/twitter') Sign in with Twitter

    p.center Don't have an account?&nbsp;
      a(href='/signup')
        strong Sign up
